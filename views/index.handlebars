<div class="container">
    <br>
    <h1 class="text-center">Welcome to Bad-Burger, Home of The Bad Burger</h1>
    <h2 class="text-center">Can I take your order?</h2>
    <br><br>

    <div class="row">
        <div id="fresh" class="col">
            <h3>Fresh Burgers</h3>
            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
            </ul>
        </div>

        <div id="half" class="col">
            <h3>Half-Eaten Burgers</h3>
            <ul>
                {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>

    <div id="add" class="text-center">
        <h3>Create Your Own</h3>
        <form class="create-form">
            <div class="form-group">
                <label for="ba">Burger Name:</label>
                <input type="text" id="ba" name="burger_name">
            </div>

            <div class="form-group">
                <label for="devoured">Is It Fresh?</label>
                <br>
                <input type="radio" name="devoured" value="0"> Fresh &nbsp;
                {{!-- <br> --}}
                <input type="radio" name="devoured" value="1" checked> Half-Eaten   
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
    <br>
</div>